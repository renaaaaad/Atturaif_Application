<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="25dp"
        android:left="10dp"
        android:right="25dp"
        android:top="5dp">

        <rotate android:fromDegrees="18">
            <shape>
                <size
                    android:width="100dp"
                    android:height="100dp" />
                <gradient
                    android:endColor="@color/gray_border"
                    android:startColor="@color/gray_border" />
                <corners
                    android:bottomLeftRadius="20dp"
                    android:bottomRightRadius="20dp"
                    android:topLeftRadius="20dp"
                    android:topRightRadius="20dp" />

            </shape>
        </rotate>
    </item>
    <item
        android:bottom="20dp"
        android:left="15dp"
        android:right="15dp"
        android:top="15dp">

        <rotate android:fromDegrees="18">
            <shape>
                <size
                    android:width="100dp"
                    android:height="100dp" />
                <gradient
                    android:endColor="@color/white"
                    android:startColor="@color/white" />
                <corners
                    android:bottomLeftRadius="20dp"
                    android:bottomRightRadius="20dp"
                    android:topLeftRadius="20dp"
                    android:topRightRadius="20dp" />
                <stroke
                    android:width="0.8dp"
                    android:color="@color/gray_border" />
            </shape>
        </rotate>
    </item>
</layer-list>
